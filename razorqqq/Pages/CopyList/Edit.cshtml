@page
@model razorqqq.Pages.CopyList.EditModel
@{
}

<br />
<h2 class="text-info">Edit Copy</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Copy.Id" />
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Copy.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Copy.Name" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Copy.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Copy.Author" class="form-control" />
            </div>
        </div>


        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div> 