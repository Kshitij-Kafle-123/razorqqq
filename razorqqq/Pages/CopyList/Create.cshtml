@page
@model razorqqq.Pages.CopyList.CreateModel
@{
}

<br />
<h2 class="text-info">Create New Copy</h2>
<br />
<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Copy.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Copy.Name" class="form-control" />
            </div>
            <span asp-validation-for="Copy.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Copy.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Copy.Author" class="form-control" />
            </div>
            <span asp-validation-for="Copy.Author" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back</a>
            </div>
        </div>

    </form>
</div> 